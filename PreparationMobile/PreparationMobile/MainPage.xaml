<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PreparationMobile.MainPage">

    <StackLayout>
        <StackLayout>
            <Entry x:Name="LoginEn" Placeholder="Login" PlaceholderColor="LightGray"/>
            <Entry x:Name="PassEn" Placeholder="Password" PlaceholderColor="LightGray"/>
            <Button x:Name="LogInBtn" Text="LogIn" HorizontalOptions="Center" WidthRequest="120" Clicked="LogInBtn_Clicked"/>
            <Button x:Name="LogUpBtn" Text="LogUp" HorizontalOptions="Center" WidthRequest="140" Clicked="LogUpBtn_Clicked"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
